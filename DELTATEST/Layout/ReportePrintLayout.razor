@inherits LayoutComponentBase
@implements IDisposable
@inject NavigationManager NavigationManager
@inject DELTATEST.Services.AuthService AuthService
@inject DELTATEST.Services.AuthStateService AuthStateService

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reporte - DELTATEST</title>
    <base href="/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="css/app.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>
<body>
    <!-- ENCABEZADO GLOBAL -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm top-row w-100">
        <div class="container-fluid px-4">
            <!-- Logo -->
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="images/logo.jpg" alt="Logo" class="logo-img me-2" />
            </a>

            <!-- Botón responsive -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Enlaces -->
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav align-items-center">
                    <li class="nav-item">
                        @if (isAuthenticated)
                        {
                            <!-- Si está autenticado, mostrar "Sign Out" -->
                            <button class="btn btn-orange ms-3" @onclick="HandleSignOut">
                                <span class="bi bi-box-arrow-right me-1"></span> Sign Out
                            </button>
                        }
                        else
                        {
                            <!-- Si no está autenticado, mostrar "Sign In" -->
                            <NavLink class="btn btn-orange ms-3" href="/IniciarSesion">
                                <span class="bi bi-box-arrow-in-right me-1"></span> Sign In
                            </NavLink>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="page">
        <main role="main" class="main-content">
            @Body
        </main>
    </div>

    <script src="_framework/blazor.webassembly.js"></script>
</body>
</html>

<style>
    body {
        margin: 0;
        padding: 0;
        background: white;
    }

    .page {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    main {
        flex: 1;
        margin: 0;
        padding: 0;
    }

    .btn-orange {
        background-color: #f58220;
        color: white;
        border: none;
        padding: 6px 16px;
        border-radius: 6px;
        transition: background-color 0.3s;
    }

    .btn-orange:hover {
        background-color: #d86c0a;
    }

    .navbar-brand img.logo-img {
        height: 45px;
        width: auto;
        display: block;
    }

    .navbar {
        padding-top: 0.3rem;
        padding-bottom: 0.3rem;
        min-height: 60px;
    }

    @@media print {
        body {
            background: white;
            margin: 0;
            padding: 0;
        }

        .navbar {
            display: none !important;
        }

        .page {
            min-height: auto;
        }

        main {
            padding: 0;
            margin: 0;
            box-shadow: none;
        }
    }
</style>

@code {
    private bool isAuthenticated = false;

    protected override async Task OnInitializedAsync()
    {
        // Esperar a que localStorage se inicialice
        await Task.Delay(100);
        
        // Inicializar el servicio de estado de autenticación
        await AuthStateService.InitializeAsync();
        
        // Suscribirse a cambios en el estado de autenticación
        AuthStateService.OnAuthenticationStateChanged += OnAuthStateChanged;
        
        NavigationManager.LocationChanged += OnLocationChanged;
        
        // Establecer el estado actual
        RefreshAuthStatus();
    }

    private void OnAuthStateChanged()
    {
        Console.WriteLine($"[ReportePrintLayout] Auth state changed");
        RefreshAuthStatus();
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        RefreshAuthStatus();
    }

    private void RefreshAuthStatus()
    {
        try
        {
            // Obtener el estado del servicio
            var (isAuth, _, _, _) = AuthStateService.GetCurrentState();
            isAuthenticated = isAuth;
            
            Console.WriteLine($"[ReportePrintLayout] Auth Status: {isAuthenticated}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[ReportePrintLayout] Error checking auth: {ex.Message}");
            isAuthenticated = false;
        }
        
        StateHasChanged();
    }

    private async Task HandleSignOut()
    {
        await AuthService.LogoutAsync();
        await AuthStateService.ClearAuthenticationAsync();
        isAuthenticated = false;
        StateHasChanged();
        NavigationManager.NavigateTo("/", forceLoad: true);
    }

    void IDisposable.Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
        AuthStateService.OnAuthenticationStateChanged -= OnAuthStateChanged;
    }
}
