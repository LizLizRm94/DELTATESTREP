@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reporte - DELTATEST</title>
    <base href="/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="css/app.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>
<body>
    <div class="page">
        <main role="main" class="main-content">
            @Body
        </main>
    </div>
</body>
</html>

<style>
    html, body {
        margin: 0;
        padding: 0;
        background: white;
        height: 100%;
        width: 100%;
    }

    .page {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    main {
        flex: 1;
        margin: 0;
        padding: 0;
    }

    @@media print {
        body {
            background: white;
            margin: 0;
            padding: 0;
        }

        .page {
            min-height: auto;
        }

        main {
            padding: 0;
            margin: 0;
            box-shadow: none;
        }
    }
</style>
