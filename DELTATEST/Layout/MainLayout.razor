<style>
    .btn-orange {
        background-color: #f58220;
        color: white;
        border: none;
        padding: 6px 16px;
        border-radius: 6px;
        transition: background-color 0.3s;
    }

    .navbar-nav .btn-orange {
        background-color: #f58220;
        color: white;
    }

    .btn-orange:hover {
        background-color: #d86c0a;
    }

    .navbar-nav .nav-link {
