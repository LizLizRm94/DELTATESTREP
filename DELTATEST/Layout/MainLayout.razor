@code {
    private bool isAuthenticated = false;
    private bool isOnAuthPage = false;
    private bool isInitialized = false;

    protected override async Task OnInitializedAsync()
    {
        NavigationManager.LocationChanged += OnLocationChanged;
        await RefreshAuthStatus();
        isInitialized = true;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Verificar autenticación después del renderizado
            await RefreshAuthStatus();
        }
        await base.OnAfterRenderAsync(firstRender);
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        CheckCurrentPage();
        // Verificar autenticación cada vez que cambia la página
        InvokeAsync(RefreshAuthStatus);
    }

    private void CheckCurrentPage()
    {
        var uri = NavigationManager.Uri;
        isOnAuthPage = uri.Contains("/IniciarSesion") || uri.Contains("/Registro");
    }

    private async Task RefreshAuthStatus()
    {
        try
        {
            CheckCurrentPage();
            
            // Llamar al endpoint para verificar si hay sesión activa
            var (isAuth, userName, userRole, userId) = await AuthService.GetCurrentUserAsync();
            isAuthenticated = isAuth;
            
            Console.WriteLine($"Auth Status: {isAuthenticated}, User: {userName}, Role: {userRole}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error checking auth: {ex.Message}");
            isAuthenticated = false;
        }
        
        StateHasChanged();
    }

    private async Task HandleSignOut()
    {
        await AuthService.LogoutAsync();
        isAuthenticated = false;
        StateHasChanged();
        NavigationManager.NavigateTo("/IniciarSesion", forceLoad: true);
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/");
    }

    void IDisposable.Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
