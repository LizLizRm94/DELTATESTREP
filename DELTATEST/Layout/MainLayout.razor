    /* FOOTER */
    .footer {
        background-color: #f58220;
        color: white;
        padding: 2rem;
    }

    .footer-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }

    .footer h4 {
        margin-bottom: 0.5rem;
    }

    .footer a {
        color: white;
        text-decoration: none;
        font-size: 0.9rem;
    }

        .footer a:hover {
            text-decoration: underline;
        }

    .footer-copy {
        text-align: center;
        margin-top: 1rem;
