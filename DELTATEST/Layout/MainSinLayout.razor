@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<!-- ENCABEZADO GLOBAL -->
<nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm top-row w-100 fixed-top">
    <div class="container-fluid px-4">

        <!-- Logo -->
        <a class="navbar-brand d-flex align-items-center" href="/">
            <img src="images/logo.jpg" alt="Logo" class="logo-img me-2" />
        </a>

        <!-- Botón responsive -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Enlaces -->
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav align-items-center">

                <li class="nav-item">
                    <NavLink class="nav-link" href="/panelControlAdmin" Match="NavLinkMatch.All">
                        <span class="bi bi-house-door-fill me-1"></span> Inicio
                    </NavLink>
                </li>

                <li class="nav-item">
                    <NavLink class="btn btn-orange ms-3" href="/IniciarSesion">Sign In</NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- CONTENIDO -->
<div class="main-body">
    @Body
</div>

<style>
    .btn-orange {
        background-color: #f58220;
        color: white;
        border: none;
        padding: 6px 16px;
        border-radius: 6px;
        transition: background-color 0.3s;
    }

    .navbar-nav .btn-orange {
        background-color: #f58220;
        color: white;
    }

    .btn-orange:hover {
        background-color: #d86c0a;
    }

    .navbar-nav .nav-link {
        color: #333 !important;
        font-weight: 500;
        transition: color 0.3s;
        font-size: 1rem;
        padding: 0.5rem 1rem;
    }

        .navbar-nav .nav-link:hover {
            color: #f58220 !important;
        }
    /* logo */

    .navbar-brand img.logo-img {
        height: 45px;
        width: auto;
        display: block;
    }

    .navbar {
        padding-top: 0.3rem;
        padding-bottom: 0.3rem;
        min-height: 60px;
    }

    .main-content {
        padding: 0;
        margin: 0;
    }

    .main-body {
        padding-top: 85px;
    }
</style>

