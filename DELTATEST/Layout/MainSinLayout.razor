    }

    .navbar-nav .nav-link {
        color: #333 !important;
        font-weight: 500;
        transition: color 0.3s;
        font-size: 1rem;
        padding: 0.5rem 1rem;
    }

        .navbar-nav .nav-link:hover {
            color: #f58220 !important;
        }
    /* logo */

    .navbar-brand img.logo-img {
        height: 45px;
        width: auto;
        display: block;
    }

    .navbar {
        padding-top: 0.3rem;
        padding-bottom: 0.3rem;
        min-height: 60px;
    }

    .main-content {
        padding: 0;
        margin: 0;
    }

    .main-body {
        padding-top: 85px;
    }
</style>

@code {
    private bool usuarioAutenticado = false;
    private bool cargandoAuth = true;

    protected override async Task OnInitializedAsync()
    {
        await VerificarAutenticacion();
        cargandoAuth = false;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender && !cargandoAuth)
        {
            await VerificarAutenticacion();
            StateHasChanged();
        }
        await base.OnAfterRenderAsync(firstRender);
    }

    private async Task VerificarAutenticacion()
    {
        try
        {
            var userName = await LocalStorage.GetItemAsync<string>("userName");
            int? userId = null;
            try { userId = await LocalStorage.GetItemAsync<int>("userId"); } catch { /* ignore */ }
            
            bool estaAutenticado = !string.IsNullOrWhiteSpace(userName) || (userId.HasValue && userId.Value > 0);
            
            if (estaAutenticado != usuarioAutenticado)
            {
                usuarioAutenticado = estaAutenticado;
                Console.WriteLine($"MainSinLayout - Auth: {usuarioAutenticado}, userName: {userName}, userId: {userId}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al verificar autenticación: {ex.Message}");
            usuarioAutenticado = false;
        }
    }

    private async Task CerrarSesion()
    {
        try
        {
            // Limpiar localStorage
            await LocalStorage.RemoveItemAsync("userName");
            await LocalStorage.RemoveItemAsync("authToken");
            await LocalStorage.RemoveItemAsync("userRole");
            await LocalStorage.RemoveItemAsync("userId");
            
            usuarioAutenticado = false;
            StateHasChanged();
            
            Console.WriteLine("Sesión cerrada - localStorage limpiado");
            
            // Navegar al login
            NavigationManager.NavigateTo("/IniciarSesion", forceLoad: true);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cerrar sesión: {ex.Message}");
            NavigationManager.NavigateTo("/IniciarSesion", forceLoad: true);
        }
    }
}
