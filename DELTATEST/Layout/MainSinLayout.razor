@inherits LayoutComponentBase
@implements IDisposable
@inject NavigationManager NavigationManager
@inject DELTATEST.Services.AuthService AuthService
@inject DELTATEST.Services.AuthStateService AuthStateService

<!-- ENCABEZADO GLOBAL -->
<nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm top-row w-100 fixed-top">
    <div class="container-fluid px-4">

        <!-- Logo -->
        <a class="navbar-brand d-flex align-items-center" href="/">
            <img src="images/logo.jpg" alt="Logo" class="logo-img me-2" />
        </a>

        <!-- Botón responsive -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Enlaces -->
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav align-items-center">

                <li class="nav-item">
                    <NavLink class="nav-link" href="/panelControlAdmin" Match="NavLinkMatch.All">
                        <span class="bi bi-house-door-fill me-1"></span> Inicio
                    </NavLink>
                </li>

                <li class="nav-item">
                    @if (isAuthenticated)
                    {
                        <!-- Si está autenticado, mostrar "Sign Out" -->
                        <button class="btn btn-orange ms-3" @onclick="HandleSignOut">
                            <span class="bi bi-box-arrow-right me-1"></span> Sign Out
                        </button>
                    }
                    else
                    {
                        <!-- Si no está autenticado, mostrar "Sign In" -->
                        <NavLink class="btn btn-orange ms-3" href="/IniciarSesion">
                            <span class="bi bi-box-arrow-in-right me-1"></span> Sign In
                        </NavLink>
                    }
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- CONTENIDO -->
<div class="main-body">
    @Body
</div>

<style>
    .btn-orange {
        background-color: #f58220;
        color: white;
        border: none;
        padding: 6px 16px;
        border-radius: 6px;
        transition: background-color 0.3s;
    }

    .navbar-nav .btn-orange {
        background-color: #f58220;
        color: white;
    }

    .btn-orange:hover {
        background-color: #d86c0a;
    }

    .navbar-nav .nav-link {
        color: #333 !important;
        font-weight: 500;
        transition: color 0.3s;
        font-size: 1rem;
        padding: 0.5rem 1rem;
    }

        .navbar-nav .nav-link:hover {
            color: #f58220 !important;
        }
    /* logo */

    .navbar-brand img.logo-img {
        height: 45px;
        width: auto;
        display: block;
    }

    .navbar {
        padding-top: 0.3rem;
        padding-bottom: 0.3rem;
        min-height: 60px;
    }

    .main-content {
        padding: 0;
        margin: 0;
    }

    .main-body {
        padding-top: 85px;
    }
</style>

@code {
    private bool isAuthenticated = false;

    protected override async Task OnInitializedAsync()
    {
        // Esperar a que localStorage se inicialice
        await Task.Delay(100);
        
        // Inicializar el servicio de estado de autenticación
        await AuthStateService.InitializeAsync();
        
        // Suscribirse a cambios en el estado de autenticación
        AuthStateService.OnAuthenticationStateChanged += OnAuthStateChanged;
        
        NavigationManager.LocationChanged += OnLocationChanged;
        
        // Establecer el estado actual
        RefreshAuthStatus();
    }

    private void OnAuthStateChanged()
    {
        Console.WriteLine($"[MainSinLayout] Auth state changed");
        RefreshAuthStatus();
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        // Verificar autenticación cada vez que cambia la página
        RefreshAuthStatus();
    }

    private void RefreshAuthStatus()
    {
        try
        {
            // Obtener el estado del servicio
            var (isAuth, _, _, _) = AuthStateService.GetCurrentState();
            isAuthenticated = isAuth;
            
            Console.WriteLine($"[MainSinLayout] Auth Status: {isAuthenticated}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[MainSinLayout] Error checking auth: {ex.Message}");
            isAuthenticated = false;
        }
        
        StateHasChanged();
    }

    private async Task HandleSignOut()
    {
        await AuthService.LogoutAsync();
        await AuthStateService.ClearAuthenticationAsync();
        isAuthenticated = false;
        StateHasChanged();
        NavigationManager.NavigateTo("/", forceLoad: true);
    }

    void IDisposable.Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
        AuthStateService.OnAuthenticationStateChanged -= OnAuthStateChanged;
    }
}
