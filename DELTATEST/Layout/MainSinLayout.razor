@inherits LayoutComponentBase
@using Blazored.LocalStorage
@inject NavigationManager NavigationManager
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage

<!-- ENCABEZADO GLOBAL -->
<nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm top-row w-100 fixed-top">
    <div class="container-fluid px-4">

        <!-- Logo -->
        <a class="navbar-brand d-flex align-items-center" href="/">
            <img src="images/logo.jpg" alt="Logo" class="logo-img me-2" />
        </a>

        <!-- Botón responsive -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Enlaces -->
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav align-items-center">

                <li class="nav-item">
                    <NavLink class="nav-link" href="/panelControlAdmin" Match="NavLinkMatch.All">
                        <span class="bi bi-house-door-fill me-1"></span> Inicio
                    </NavLink>
                </li>

                <li class="nav-item">
                    @if (usuarioAutenticado)
                    {
                        <button class="btn btn-orange ms-3" @onclick="CerrarSesion" style="cursor: pointer;">
                            <span class="bi bi-box-arrow-right me-1"></span> Cerrar Sesión
                        </button>
                    }
                    else
                    {
                        <NavLink class="btn btn-orange ms-3" href="/IniciarSesion">
                            <span class="bi bi-box-arrow-in-right me-1"></span> Sign In
                        </NavLink>
                    }
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- CONTENIDO -->
<div class="main-body">
    @Body
</div>

<style>
    .btn-orange {
        background-color: #f58220;
        color: white;
        border: none;
        padding: 6px 16px;
        border-radius: 6px;
        transition: background-color 0.3s;
    }

