@page "/usuarios/evaluaciones/{IdUsuario:int}"
@using DELTATEST.Models
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager NavigationManager
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage
@layout MainSinLayout

<div class="container-fluid d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="w-100" style="max-width: 1200px; padding: 30px 20px;">
        <h3 class="fw-bold text-center mb-2 text-dark">Panel de Usuario</h3>

        <!-- EVALUACIONES TABLAS -->
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-warning text-dark fw-bold py-3">
                        <i class="bi bi-hammer"></i> Evaluaciones Prácticas
                    </div>
                    <div class="card-body p-0">
                        @if (evaluacionesPracticas != null && evaluacionesPracticas.Count > 0)
                        {
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="text-center">Puntaje</th>
                                            <th class="text-center">Fecha</th>
                                            <th class="text-center">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var eval in evaluacionesPracticas)
                                        {
                                            <tr>
                                                <td class="text-center"><strong class="text-warning">@eval.NotaPractica?.ToString("F0") / 100</strong></td>
                                                <td class="text-center">@eval.FechaEvaluacion?.ToString("dd/MM/yyyy")</td>
                                                <td class="text-center">
                                                    <button class="btn btn-sm btn-warning" @onclick="() => VerDetallePractica(eval.IdEvaluacion)" title="Ver detalles">
                                                        <i class="bi bi-eye"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="p-4 text-center text-muted">
                                <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                                <p class="mt-2">Aún no realizó prueba práctica</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-info text-white fw-bold py-3">
                        <i class="bi bi-book"></i> Evaluaciones Teóricas
                    </div>
                    <div class="card-body p-0">
                        @if (evaluacionesTeorica != null && evaluacionesTeorica.Count > 0)
                        {
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="text-center">Fecha</th>
                                            <th class="text-center">Puntaje</th>
                                            <th class="text-center">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var eval in evaluacionesTeorica)
                                        {
                                            <tr>
                                                <td class="text-center">@eval.FechaEvaluacion?.ToString("dd/MM/yyyy")</td>
                                                <td class="text-center">
                                                    @if (eval.Nota.HasValue)
                                                    {
                                                        <strong class="text-info">@eval.Nota.Value.ToString("F0") / 100</strong>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Sin responder</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (eval.Nota.HasValue)
                                                    {
                                                        <button class="btn btn-sm btn-info" @onclick="() => VerDetalleTeorica(eval.IdEvaluacion)" title="Ver detalles">
                                                            <i class="bi bi-eye"></i>
                                                        </button>
                                                    }
                                                    else if (eval.EstadoEvaluacion == "Respondida")
                                                    {
                                                        <span class="badge bg-warning text-dark">Pendiente</span>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-sm btn-info" @onclick="() => ResponderEvaluacion(eval.IdEvaluacion)" title="Responder">
                                                            <i class="bi bi-pencil"></i>
                                                        </button>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="p-4 text-center text-muted">
                                <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                                <p class="mt-2">Sin evaluaciones teóricas</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- BOTÓN VOLVER -->
        <div class="text-center mt-4">
            <button class="btn btn-secondary" @onclick="IrAtras">
                <i class="bi bi-arrow-left"></i> Volver
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter] 
    public int IdUsuario { get; set; }

    private List<EvaluacionPractica>? evaluacionesPracticas;
    private List<EvaluacionTeoricaResumen>? evaluacionesTeorica;
    private string? nombreUsuario;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await CargarNombreUsuario();
        await CargarEvaluaciones();
    }

    private async Task CargarNombreUsuario()
    {
        try
        {
            nombreUsuario = await LocalStorage.GetItemAsync<string>("userName");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar nombre: {ex.Message}");
            nombreUsuario = "Usuario";
        }
    }

    private async Task CargarEvaluaciones()
    {
        try
        {
            isLoading = true;

            // Obtener evaluaciones prácticas
            try
            {
                var responsePractica = await Http.GetAsync($"api/evaluaciones/usuario/{IdUsuario}");
                if (responsePractica.IsSuccessStatusCode)
                {
                    evaluacionesPracticas = await responsePractica.Content.ReadFromJsonAsync<List<EvaluacionPractica>>();
                }
                else
                {
                    evaluacionesPracticas = new List<EvaluacionPractica>();
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error prácticas: {ex.Message}");
                evaluacionesPracticas = new List<EvaluacionPractica>();
            }

            // Obtener evaluaciones teóricas
            try
            {
                var responseTeoria = await Http.GetAsync($"api/evaluacionesteoricass/usuario/{IdUsuario}");
                if (responseTeoria.IsSuccessStatusCode)
                {
                    var todasLasEvaluaciones = await responseTeoria.Content.ReadFromJsonAsync<List<EvaluacionTeoricaResumen>>();
                    evaluacionesTeorica = todasLasEvaluaciones ?? new List<EvaluacionTeoricaResumen>();
                }
                else
                {
                    evaluacionesTeorica = new List<EvaluacionTeoricaResumen>();
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error teóricas: {ex.Message}");
                evaluacionesTeorica = new List<EvaluacionTeoricaResumen>();
            }
        }
        finally
        {
            isLoading = false;
        }
    }

    private void VerDetallePractica(int idEvaluacion)
    {
        NavigationManager.NavigateTo($"/detalle-evaluacion/{idEvaluacion}");
    }

    private void VerDetalleTeorica(int idEvaluacion)
    {
        NavigationManager.NavigateTo($"/detalle-evaluacion/{idEvaluacion}");
    }

    private void ResponderEvaluacion(int idEvaluacion)
    {
        NavigationManager.NavigateTo($"/responder-evaluacion-teorica/{idEvaluacion}");
    }

    private void IrAtras()
    {
        NavigationManager.NavigateTo($"/estado/{IdUsuario}");
    }

    public class EvaluacionPractica
    {
        public int IdEvaluacion { get; set; }
        public DateOnly? FechaEvaluacion { get; set; }
        public decimal? NotaPractica { get; set; }
    }

    public class EvaluacionTeoricaResumen
    {
        public int IdEvaluacion { get; set; }
        public DateOnly? FechaEvaluacion { get; set; }
        public decimal? Nota { get; set; }
        public string? EstadoEvaluacion { get; set; }
        public int CantidadPreguntas { get; set; }
        public string? TipoEvaluacion { get; set; }
    }
}

<style>
    .min-vh-100 {
        min-height: 100vh;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .btn-warning {
        background-color: #f58220;
        border-color: #f58220;
        color: white;
    }

    .btn-warning:hover {
        background-color: #e67e1a;
        transform: translateY(-2px);
        box-shadow: 0 2px 8px rgba(245, 130, 32, 0.3);
    }

    .btn-info:hover {
        transform: translateY(-2px);
        box-shadow: 0 2px 8px rgba(23, 162, 184, 0.3);
    }

    .card-header {
        border-bottom: 3px solid rgba(0, 0, 0, 0.1);
    }

    .bg-warning {
        background-color: #f58220 !important;
    }

    .text-warning {
        color: #f58220 !important;
    }

    .nota-grande {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: 0.8;
        }
    }
</style>
