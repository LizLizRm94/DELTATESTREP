@page "/detalle-evaluacion/{IdEvaluacion:int}"
@using DELTATEST.Models
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject IJSRuntime JS
@layout MainSinLayout

@if (isLoading)
{
    <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="text-center">
            <div class="spinner-border text-warning mb-3" role="status"></div>
            <p>Cargando detalles de la evaluación...</p>
        </div>
    </div>
}
else if (evaluacion != null)
{
    <div class="container py-5" style="max-width: 900px;">
        <!-- TÍTULO DINÁMICO -->
        <h2 class="text-center text-uppercase mb-5" style="color: #f58220; font-weight: bold;">
            Detalles de Evaluación
        </h2>

        <!-- RECUADRO DE RESULTADO -->
        <div class="d-flex justify-content-center mb-5">
            <div class="card border-0 shadow-lg" style="max-width: 600px; width: 100%; background: linear-gradient(135deg, #f58220 0%, #ff9c42 100%); color: white;">
                <div class="card-body text-center p-5">
                    <h5 class="card-title mb-4" style="font-size: 20px;">Resultado de Evaluación</h5>
                    
                    <div class="mb-4">
                        <p style="font-size: 48px; font-weight: bold; margin: 0;">
                            @(evaluacion.Nota.HasValue ? evaluacion.Nota.Value.ToString("F0") : "N/A")
                            <span style="font-size: 24px;">/ 100</span>
                        </p>
                    </div>

                    <hr style="background-color: rgba(255,255,255,0.3); margin: 20px 0;">

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <p style="font-size: 12px; opacity: 0.9; margin-bottom: 5px;">FECHA DE EVALUACIÓN</p>
                            <p style="font-weight: bold; font-size: 16px;">@evaluacion.FechaEvaluacion?.ToString("dd/MM/yyyy")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p style="font-size: 12px; opacity: 0.9; margin-bottom: 5px;">TIPO</p>
                            <p style="font-weight: bold; font-size: 16px;">@evaluacion.TipoEvaluacion</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <p style="font-size: 12px; opacity: 0.9; margin-bottom: 5px;">ESTADO</p>
                            <p style="font-weight: bold; font-size: 16px;">@evaluacion.EstadoEvaluacion</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p style="font-size: 12px; opacity: 0.9; margin-bottom: 5px;">EVALUADOR</p>
                            <p style="font-weight: bold; font-size: 16px;">@(!string.IsNullOrEmpty(evaluacion.NombreAdministrador) ? evaluacion.NombreAdministrador : "No asignado")</p>
                        </div>
                    </div>

                    <!-- ALERTA DE ESTADO -->
                    @if (evaluacion.Nota.HasValue)
                    {
                        <div class="alert @(evaluacion.Nota >= 80 ? "alert-success" : "alert-danger") mt-4 mb-0">
                            @if (evaluacion.Nota >= 80)
                            {
                                <strong>✓ Evaluación Aprobada</strong><br />
                                <small>Felicidades, has superado el promedio de aprobación.</small>
                            }
                            else
                            {
                                <strong>⚠ Evaluación Reprobada</strong><br />
                                <small>El promedio de aprobación es 80. Tienes oportunidades adicionales para repetir.</small>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- INFORMACIÓN ADICIONAL -->
        @if (!string.IsNullOrEmpty(evaluacion.NombreEvaluado))
        {
            <div class="card mb-4 shadow-sm border-0">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="mb-0" style="color: #333;">
                        <i class="bi bi-person"></i> Información del Evaluado
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Nombre:</strong> @evaluacion.NombreEvaluado</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Cédula:</strong> @(!string.IsNullOrEmpty(evaluacion.CiEvaluado) ? evaluacion.CiEvaluado : "N/A")</p>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- BOTONES DE ACCIÓN -->
        <div class="text-center mt-5">
            <button class="btn btn-lg" style="background-color: #f58220; color: white; border: none;" @onclick="VolverAlPanel">
                <i class="bi bi-arrow-left"></i> Volver al Panel
            </button>
        </div>
    </div>
}
else
{
    <div class="container py-5">
        <div class="alert alert-danger text-center">
            <h4>Error al cargar la evaluación</h4>
            <p>No se encontraron los detalles de la evaluación solicitada.</p>
            <button class="btn btn-warning" @onclick="VolverAlPanel">Volver al Panel</button>
        </div>
    </div>
}

@code {
    [Parameter] 
    public int IdEvaluacion { get; set; }

    private EvaluacionDetalle? evaluacion;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await CargarDetalleEvaluacion();
    }

    private async Task CargarDetalleEvaluacion()
    {
        try
        {
            isLoading = true;
            
            var response = await Http.GetAsync($"api/evaluaciones/{IdEvaluacion}");
            if (response.IsSuccessStatusCode)
            {
                var jsonContent = await response.Content.ReadAsStringAsync();
                Console.WriteLine($"Response: {jsonContent}");
                
                evaluacion = await response.Content.ReadFromJsonAsync<EvaluacionDetalle>();
            }
            else
            {
                Console.WriteLine($"Error: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void VolverAlPanel()
    {
        NavigationManager.NavigateTo("/", forceLoad: true);
    }

    public class EvaluacionDetalle
    {
        public int IdEvaluacion { get; set; }
        public int IdEvaluado { get; set; }
        public string? NombreEvaluado { get; set; }
        public string? CiEvaluado { get; set; }
        public string? NombreAdministrador { get; set; }
        public DateOnly? FechaEvaluacion { get; set; }
        public decimal? Nota { get; set; }
        public string? EstadoEvaluacion { get; set; }
        public string? TipoEvaluacion { get; set; }
    }
}

