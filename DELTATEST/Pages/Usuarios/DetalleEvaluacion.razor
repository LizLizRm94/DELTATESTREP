@page "/detalle-evaluacion/{IdEvaluacion:int}"
@using DELTATEST.Models
@layout MainSinLayout
@inject HttpClient Http
@inject NavigationManager NavigationManager

<div class="detalle-container">
    <h1 class="titulo-principal">DETALLE DE EVALUACIÓN</h1>

    @if (cargando)
    {
        <div class="loading">
            <div class="spinner"></div>
            <p>Cargando evaluación...</p>
        </div>
    }
    else if (mostrarError)
    {
        <div class="error-mensaje">
            <p>Error al cargar la evaluación: @mensajeError</p>
        </div>
    }
    else if (evaluacion != null)
    {
        <div class="detalle-card">
            <!-- Información del evaluado -->
            <div class="info-grid">
                <div class="info-item">
                    <label>EVALUADO:</label>
                    <p class="valor">@evaluacion.NombreEvaluado</p>
                </div>
                <div class="info-item">
                    <label>CI:</label>
                    <p class="valor">@evaluacion.CiEvaluado</p>
                </div>
            </div>

            <div class="info-grid">
                <div class="info-item">
                    <label>FECHA DE EVALUACIÓN:</label>
                    <p class="valor">@evaluacion.FechaEvaluacion?.ToString("dd/MM/yyyy")</p>
                </div>
                <div class="info-item">
                    <label>TIPO:</label>
                    <p class="valor">@evaluacion.TipoEvaluacion</p>
                </div>
            </div>

            <!-- Resultado -->
            <div class="resultado-seccion">
                <h3>Resultado</h3>
                <div class="nota-box @ObtenerClaseNota(evaluacion.Nota)">
                    <div class="nota-numero">@((int)(evaluacion.Nota ?? 0)) / 100</div>
                    <div class="nota-estado">@ObtenerEstadoNota(evaluacion.Nota)</div>
                </div>
            </div>

            <!-- Recomendaciones -->
            <div class="recomendaciones-seccion">
                <h3>Recomendaciones para Mejorar</h3>
                @if (!string.IsNullOrWhiteSpace(evaluacion.Recomendaciones))
                {
                    <div class="recomendaciones-lista">
                        @foreach (var linea in evaluacion.Recomendaciones.Split(new[] { "\n", "\r\n" }, StringSplitOptions.RemoveEmptyEntries))
                        {
                            <p><span class="check-icon">✓</span> @linea</p>
                        }
                    </div>
                }
                else
                {
                    <p class="sin-recomendaciones">No hay recomendaciones disponibles</p>
                }
            </div>

            <!-- Botones de acción -->
            <div class="botones-container">
                @if (evaluacion.Nota.HasValue && evaluacion.Nota < 80)
                {
                    <button class="btn btn-solicitar" @onclick="SolicitarRepetir">
                        Solicitar Repetir Evaluación
                    </button>
                }
                <button class="btn btn-volver" @onclick="VolverEvaluaciones">
                    Volver a Evaluaciones
                </button>
            </div>
        </div>
    }
</div>

