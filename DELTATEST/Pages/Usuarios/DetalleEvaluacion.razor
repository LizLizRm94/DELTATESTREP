@code {
    [Parameter]
    public int IdEvaluacion { get; set; }

    private EvaluacionDetailDto? evaluacion;
    private bool cargando = true;
    private bool mostrarError = false;
    private string mensajeError = "";

    protected override async Task OnInitializedAsync()
    {
        await CargarEvaluacion();
    }

    private async Task CargarEvaluacion()
    {
        try
        {
            cargando = true;
            Console.WriteLine($"Cargando evaluación con ID: {IdEvaluacion}");
            
            var response = await Http.GetAsync($"api/evaluaciones/{IdEvaluacion}");

            Console.WriteLine($"Status Code: {response.StatusCode}");
            Console.WriteLine($"Is Success: {response.IsSuccessStatusCode}");

            if (response.IsSuccessStatusCode)
            {
                evaluacion = await response.Content.ReadFromJsonAsync<EvaluacionDetailDto>();
                if (evaluacion == null)
                {
                    mostrarError = true;
                    mensajeError = "No se encontró la evaluación";
                    Console.WriteLine("Evaluación nula después de deserializar");
                }
                else
                {
                    Console.WriteLine($"Evaluación cargada: {evaluacion.NombreEvaluado}");
                }
            }
            else
            {
                mostrarError = true;
                var content = await response.Content.ReadAsStringAsync();
                mensajeError = $"Error {response.StatusCode}: {content}";
                Console.WriteLine($"Error response: {content}");
            }
        }
        catch (Exception ex)
        {
            mostrarError = true;
            mensajeError = ex.Message;
            Console.WriteLine($"Exception: {ex.Message}");
            Console.WriteLine($"Stack: {ex.StackTrace}");
        }
        finally
        {
            cargando = false;
        }
    }

    private string ObtenerClaseNota(decimal? nota)
    {
        if (!nota.HasValue) return "reprobado";
        if (nota >= 80) return "excelente";
        if (nota >= 51) return "bueno";
        return "reprobado";
    }

    private string ObtenerEstadoNota(decimal? nota)
    {
        if (!nota.HasValue) return "Sin calificación";
        if (nota >= 80) return "Excelente";
        if (nota >= 51) return "Bueno";
        return "Reprobado";
    }

    private void SolicitarRepetir()
    {
        // Navegar a la página para solicitar repetir evaluación
        NavigationManager.NavigateTo("/admin/evaluaciones-teoricas");
    }

    private void VolverEvaluaciones()
    {
        NavigationManager.NavigateTo($"/usuarios/evaluaciones/{evaluacion?.IdEvaluado ?? 1}");
    }

    public class EvaluacionDetailDto
    {
        public int IdEvaluacion { get; set; }
        public int IdEvaluado { get; set; }
        public string? NombreEvaluado { get; set; }
        public string? CiEvaluado { get; set; }
        public string? NombreAdministrador { get; set; }
        public DateOnly? FechaEvaluacion { get; set; }
        public decimal? Nota { get; set; }
        public string? EstadoEvaluacion { get; set; }
        public string? TipoEvaluacion { get; set; }
        public string? Recomendaciones { get; set; }
    }
}

