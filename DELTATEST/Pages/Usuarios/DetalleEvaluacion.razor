@page "/detalle-evaluacion/{IdEvaluacion:int}"
@using DELTATEST.Models
@layout MainSinLayout
@inject HttpClient Http
@inject NavigationManager NavigationManager

<div class="container-detalle">
 <h2 class="titulo-detalle">DETALLE DE EVALUACIÓN</h2>

@if (cargando)
    {
        <div class="loading-container">
  <div class="spinner"></div>
       <p>Cargando evaluación...</p>
        </div>
    }
    else if (mostrarError)
    {
   <div class="alerta alerta-error">
            <span>@mensajeError</span>
        </div>
    }
 else if (evaluacion != null)
    {
        <div class="detalle-card">
     <!-- Información del Evaluado -->
            <div class="seccion-evaluado">
                <div class="info-row">
 <div class="info-item">
            <label>Evaluado:</label>
      <p class="valor">@evaluacion.NombreEvaluado</p>
           </div>
<div class="info-item">
          <label>CI:</label>
 <p class="valor">@evaluacion.CiEvaluado</p>
        </div>
          </div>
     <div class="info-row">
<div class="info-item">
             <label>Fecha de Evaluación:</label>
   <p class="valor">@evaluacion.FechaEvaluacion?.ToString("dd/MM/yyyy")</p>
   </div>
        <div class="info-item">
      <label>Tipo:</label>
         <p class="valor">@(evaluacion.TipoEvaluacion == "Teórica" ? "Evaluación Teórica" : "Evaluación Práctica")</p>
    </div>
                </div>
            </div>

 <!-- Nota Obtenida -->
       <div class="seccion-nota">
      <h3>Resultado</h3>
                <div class="nota-contenedor @ObtenerClaseNota(evaluacion.Nota)">
         <div class="nota-valor">@evaluacion.Nota?.ToString("F0") / 100</div>
        <div class="nota-estado">@ObtenerEstadoNota(evaluacion.Nota)</div>
    </div>
       </div>

    <!-- Recomendaciones -->
          @if (!string.IsNullOrWhiteSpace(evaluacion.Recomendaciones))
      {
                <div class="seccion-recomendaciones">
        <h3>Recomendaciones para Mejorar</h3>
      <div class="recomendaciones-texto">
        @foreach (var linea in evaluacion.Recomendaciones.Split(new[] { "\n", "\r\n" }, StringSplitOptions.RemoveEmptyEntries))
     {
    <p>✓ @linea</p>
   }
       </div>
       </div>
}
        else
   {
   <div class="seccion-recomendaciones">
    <h3>Recomendaciones para Mejorar</h3>
          <p class="sin-recomendaciones">No hay recomendaciones disponibles</p>
       </div>
     }

            <!-- Botones -->
            <div class="botones-accion">
        @if (evaluacion.Nota.HasValue && evaluacion.Nota < 80)
          {
     <button class="btn btn-repetir" @onclick="RepetirEvaluacion">
              Solicitar Repetir Evaluación
     </button>
          }
<button class="btn btn-volver" @onclick="VolverAlPanel">
         ← Volver a Evaluaciones
     </button>
     </div>
     </div>
    }
</div>

