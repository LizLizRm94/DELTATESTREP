@page "/ver-recomendaciones/{IdEvaluacion:int}"
@using DELTATEST.Models
@inject HttpClient Http
@inject NavigationManager NavigationManager
@layout MainSinLayout

<div class="container-recomendaciones">
    <h2 class="titulo-recomendaciones">Recomendaciones de Evaluación</h2>

    @if (cargando)
    {
        <div class="loading-container">
   <div class="spinner"></div>
            <p>Cargando recomendaciones...</p>
        </div>
    }
    else if (mostrarError)
    {
        <div class="alerta alerta-error">
            <span>@mensajeError</span>
        </div>
    }
    else if (evaluacion == null)
    {
        <div class="alerta alerta-info">
            <span>No se encontró la evaluación</span>
        </div>
    }
    else
    {
        <div class="recomendaciones-card">
            <!-- Información del evaluado -->
    <div class="evaluado-seccion">
                <h3>Evaluado</h3>
                <p><strong>@evaluacion.NombreEvaluado</strong></p>
    <p>CI: @evaluacion.CiEvaluado</p>
  <p>Fecha: @evaluacion.FechaEvaluacion?.ToString("dd/MM/yyyy")</p>
         </div>

            <!-- Nota obtenida -->
         <div class="nota-seccion">
                <h3>Resultado</h3>
           <div class="nota-display @ObtenerClaseNota(evaluacion.Nota)">
      <span class="nota-valor">@evaluacion.Nota?.ToString("F0") / 100</span>
           <span class="nota-estado">@ObtenerEstadoNota(evaluacion.Nota)</span>
   </div>
            </div>

            <!-- Recomendaciones -->
   <div class="recomendaciones-seccion">
    <h3>Recomendaciones para Mejorar</h3>
        @if (!string.IsNullOrWhiteSpace(evaluacion.Recomendaciones))
           {
          <div class="recomendaciones-texto">
           @foreach (var linea in evaluacion.Recomendaciones.Split(new[] { "\n", "\r\n" }, StringSplitOptions.RemoveEmptyEntries))
        {
     <p>? @linea</p>
                }
      </div>
          }
     else
          {
        <p class="sin-recomendaciones">No hay recomendaciones disponibles</p>
          }
    </div>

       <!-- Botón volver -->
  <div class="botones-seccion">
<button class="btn btn-volver" @onclick="VolverAtras">
        ? Volver
         </button>
       </div>
        </div>
    }
</div>

