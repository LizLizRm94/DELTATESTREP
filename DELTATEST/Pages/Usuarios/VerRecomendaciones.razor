            flex-direction: column;
            gap: 12px;
        }

        .btn-volver {
            width: 100%;
            min-width: auto;
        }
    }
</style>

@code {
    [Parameter]
    public int IdEvaluacion { get; set; }

    private EvaluacionDetailDto? evaluacion;
    private bool cargando = true;
    private bool mostrarError = false;
    private string mensajeError = "";

    protected override async Task OnInitializedAsync()
    {
        await CargarEvaluacion();
    }

    private async Task CargarEvaluacion()
    {
        try
        {
            evaluacion = await Http.GetFromJsonAsync<EvaluacionDetailDto>(
           $"https://localhost:7287/api/evaluaciones/{IdEvaluacion}"
          );

            if (evaluacion == null)
   {
    mostrarError = true;
         mensajeError = "No se pudo cargar la evaluación";
        }
        }
        catch (Exception ex)
     {
   mostrarError = true;
     mensajeError = $"Error al cargar: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
      }
     finally
        {
         cargando = false;
        }
    }

    private void VolverAtras()
    {
        NavigationManager.NavigateTo("/usuarios/evaluaciones/1");
    }

 private string ObtenerClaseNota(decimal? nota)
    {
        if (!nota.HasValue) return "reprobado";
        if (nota >= 80) return "excelente";
        if (nota >= 51) return "bien";
        return "reprobado";
    }

    private string ObtenerEstadoNota(decimal? nota)
    {
        if (!nota.HasValue) return "Sin calificación";
        if (nota >= 80) return "Excelente";
        if (nota >= 51) return "Bueno";
        return "Reprobado";
    }

    public class EvaluacionDetailDto
    {
        public int IdEvaluacion { get; set; }
      public int IdEvaluado { get; set; }
        public string? NombreEvaluado { get; set; }
        public string? CiEvaluado { get; set; }
        public string? NombreAdministrador { get; set; }
  public DateOnly? FechaEvaluacion { get; set; }
    public decimal? Nota { get; set; }
        public string? EstadoEvaluacion { get; set; }
      public string? TipoEvaluacion { get; set; }
        public string? Recomendaciones { get; set; }
    }
}
