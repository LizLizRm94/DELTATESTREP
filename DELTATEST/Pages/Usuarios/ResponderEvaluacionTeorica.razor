@code {
    [Parameter] public int IdEvaluacion { get; set; }

    private List<PreguntaTeorica>? preguntas;
    private bool cargando = true;
    private bool cargandoSubmit = false;
  private bool mostrarMensaje = false;
    private string mensajeRespuesta = string.Empty;
    private bool esError = false;
    private int idUsuario = 0;

    protected override async Task OnInitializedAsync()
    {
        await CargarPreguntas();
    }

    private async Task CargarPreguntas()
 {
        try
      {
            cargando = true;

     // Obtener ID del usuario desde localStorage
  try
     {
      idUsuario = await JS.InvokeAsync<int>("parseInt", await JS.InvokeAsync<string>("localStorage.getItem", "userId"));
         }
    catch
  {
        mostrarMensaje = true;
         esError = true;
      mensajeRespuesta = "No se pudo obtener la información del usuario";
    return;
            }

      // Obtener evaluación
        var responseEval = await Http.GetAsync($"api/evaluaciones/{IdEvaluacion}");
  if (!responseEval.IsSuccessStatusCode)
      {
  mostrarMensaje = true;
  esError = true;
      mensajeRespuesta = "La evaluación no existe";
         return;
        }

   // Obtener preguntas de tipo teórico desde la BD
       var responsePreguntas = await Http.GetAsync("api/preguntas/teoricas");
      if (responsePreguntas.IsSuccessStatusCode)
{
      var preguntasData = await responsePreguntas.Content.ReadFromJsonAsync<List<Pregunta>>();
     preguntas = preguntasData?.Select(p => new PreguntaTeorica
              {
  IdPregunta = p.IdPregunta,
    Texto = p.Texto,
        Respuesta = string.Empty
  }).ToList() ?? new List<PreguntaTeorica>();

      if (preguntas.Count == 0)
      {
        mostrarMensaje = true;
     esError = true;
           mensajeRespuesta = "No hay preguntas teóricas disponibles en la BD";
      }
      }
        else
 {
  mostrarMensaje = true;
  esError = true;
  mensajeRespuesta = $"Error al cargar preguntas: {responsePreguntas.StatusCode}";
      }
      }
        catch (Exception ex)
        {
            mostrarMensaje = true;
    esError = true;
      mensajeRespuesta = $"Error al cargar: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
      finally
        {
   cargando = false;
        }
    }

    private async Task GuardarRespuestas()
    {
        if (preguntas == null || preguntas.Count == 0)
        {
      mostrarMensaje = true;
    esError = true;
 mensajeRespuesta = "No hay preguntas para responder";
    return;
 }

        var respuestasSinTexto = preguntas.Where(p => string.IsNullOrWhiteSpace(p.Respuesta)).ToList();
        if (respuestasSinTexto.Count > 0)
        {
            mostrarMensaje = true;
      esError = true;
            mensajeRespuesta = $"Debe responder todas las preguntas. Faltan {respuestasSinTexto.Count}";
            return;
        }

      cargandoSubmit = true;
        try
        {
  var request = new
        {
        idUsuario = idUsuario,
    idEvaluacion = IdEvaluacion,
      respuestas = preguntas.Select(p => new
    {
     idPregunta = p.IdPregunta,
               textoRespuesta = p.Respuesta
 }).ToList()
  };

         var response = await Http.PostAsJsonAsync("https://localhost:7287/api/evaluacionesteoricass/guardar-respuestas", request);

if (response.IsSuccessStatusCode)
    {
   mostrarMensaje = true;
     esError = false;
      mensajeRespuesta = "¡Respuestas guardadas exitosamente! Pendiente de calificación por el administrador.";
    await Task.Delay(2000);
   NavigationManager.NavigateTo($"/usuarios/evaluaciones/{idUsuario}");
  }
            else
 {
        var contenidoError = await response.Content.ReadAsStringAsync();
        mostrarMensaje = true;
    esError = true;
    mensajeRespuesta = $"Error al guardar: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
      mostrarMensaje = true;
    esError = true;
       mensajeRespuesta = $"Error: {ex.Message}";
      }
 finally
        {
         cargandoSubmit = false;
        }
    }

    private void Cancelar()
    {
        NavigationManager.NavigateTo($"/usuarios/evaluaciones/{idUsuario}");
    }

    private void CerrarMensaje()
    {
        mostrarMensaje = false;
    }

    public class PreguntaTeorica
    {
    public int IdPregunta { get; set; }
        public string Texto { get; set; } = string.Empty;
        public string? Respuesta { get; set; }
    }

    public class Pregunta
    {
        public int IdPregunta { get; set; }
        public string Texto { get; set; } = string.Empty;
    public bool TipoEvaluacion { get; set; }
    }
}
