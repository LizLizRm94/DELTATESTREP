@page "/responder-evaluacion-teorica/{IdEvaluacion:int}"
@using DELTATEST.Models
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject IJSRuntime JS
@layout MainSinLayout

<div class="container-evaluacion">
<h3 class="titulo-evaluacion">EVALUACIÓN TEÓRICA</h3>
    @if (mostrarMensaje)
    {
        <div class="alerta @(esError ? "alerta-error" : "alerta-exito")">
          <span>@mensajeRespuesta</span>
          <button type="button" class="btn-cerrar" @onclick="CerrarMensaje">&times;</button>
        </div>
    }

    @if (cargando)
    {
        <div class="loading-container">
 <div class="spinner"></div>
            <p>Cargando evaluación...</p>
        </div>
    }
    else if (preguntas == null || preguntas.Count == 0)
    {
        <div class="alerta alerta-info">
            <span>No hay preguntas disponibles para esta evaluación</span>
        </div>
    }
    else
    {
     <form @onsubmit="GuardarRespuestas">
    <div class="form-evaluacion">
    @for (int i = 0; i < preguntas.Count; i++)
   {
       var pregunta = preguntas[i];
        <div class="pregunta-container">
        <div class="pregunta-numero">
      <p>Pregunta @(i + 1) de @preguntas.Count</p>
 </div>
       
        <div class="pregunta-texto">
<h5>@pregunta.Texto</h5>
  </div>

              <div class="respuesta-container">
           <textarea 
              class="textarea-respuesta" 
        @bind="pregunta.Respuesta"
            placeholder="Escriba su respuesta aquí..."
          rows="5"></textarea>
      </div>

 <hr />
    </div>
           }

      <div class="acciones">
       <button type="submit" class="btn btn-primario" disabled="@cargandoSubmit">
     @if (cargandoSubmit)
      {
  <span>Guardando...</span>
            }
  else
         {
       <span>Enviar Respuestas</span>
        }
        </button>

 <button type="button" class="btn btn-secundario" @onclick="Cancelar" disabled="@cargandoSubmit">Cancelar</button>
         </div>
       </div>
        </form>
    }
</div>

