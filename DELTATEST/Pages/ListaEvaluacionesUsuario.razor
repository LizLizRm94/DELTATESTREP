@page "/lista-evaluaciones-usuario/{IdUsuario:int}"
@using DELTATEST.Services
@inject HttpClient Http
@inject NavigationManager Nav

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-warning">Evaluaciones del Usuario</h3>
        <button class="btn btn-secondary" @onclick="IrAtras">? Volver</button>
    </div>

    @if (isLoading)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-warning" role="status"></div>
            <p class="mt-3">Cargando evaluaciones...</p>
        </div>
    }
    else if (evaluaciones == null || evaluaciones.Count == 0)
    {
        <div class="alert alert-info text-center">
            <p>No hay evaluaciones registradas para este usuario.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="table-warning">
                    <tr>
                        <th>ID</th>
                        <th>Fecha</th>
                        <th>Tipo</th>
                        <th>Nota</th>
                        <th>Estado</th>
                        <th>Evaluador</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var eval in evaluaciones)
                    {
                        <tr>
                            <td>#@eval.IdEvaluacion</td>
                            <td>@(eval.FechaEvaluacion?.ToString("dd/MM/yyyy") ?? "-")</td>
                            <td>@eval.TipoEvaluacion</td>
                            <td class="text-center">
                                @if (eval.Nota.HasValue)
                                {
                                    <span class="badge @(eval.Nota >= 80 ? "bg-success" : "bg-danger")">
                                        @eval.Nota.Value.ToString("F0")/100
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>@eval.EstadoEvaluacion</td>
                            <td>@eval.NombreAdministrador</td>
                            <td>
                                <button class="btn btn-sm btn-warning" 
                                        @onclick="() => VerReporte(eval.IdEvaluacion)">
                                    <i class="bi bi-file-pdf"></i> Ver Reporte
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    [Parameter]
    public int IdUsuario { get; set; }

    private List<EvaluacionDto> evaluaciones = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            evaluaciones = await Http.GetFromJsonAsync<List<EvaluacionDto>>(
                $"https://localhost:7287/api/evaluaciones/usuario/{IdUsuario}"
            ) ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void VerReporte(int idEvaluacion)
    {
        Nav.NavigateTo($"/reporte-evaluacion/{idEvaluacion}");
    }

    private void IrAtras()
    {
        Nav.NavigateTo("/", forceLoad: true);
    }

    public class EvaluacionDto
    {
        public int IdEvaluacion { get; set; }
        public DateOnly? FechaEvaluacion { get; set; }
        public decimal? Nota { get; set; }
        public string? EstadoEvaluacion { get; set; }
        public string? TipoEvaluacion { get; set; }
        public string? NombreAdministrador { get; set; }
    }
}
