@code {
    private List<EvaluacionDto>? evaluacionesPendientes;
    private List<EvaluacionDto>? evaluacionesRevisadas;
    private bool cargando = true;
    private string? mensajeError;

    protected override async Task OnInitializedAsync()
    {
        await CargarEvaluaciones();
    }

    private async Task CargarEvaluaciones()
    {
        try
        {
            cargando = true;
            mensajeError = null;

            // Obtener todas las evaluaciones teóricas
            var response = await Http.GetAsync("api/evaluacionesteoricass/debug/todas");

            if (response.IsSuccessStatusCode)
            {
                var contenido = await response.Content.ReadAsStringAsync();
                var todasLasEvaluaciones = JsonSerializer.Deserialize<List<EvaluacionDto>>(contenido);

                if (todasLasEvaluaciones != null)
                {
                    // Separar en pendientes y revisadas
                    evaluacionesPendientes = todasLasEvaluaciones
                        .Where(e => string.IsNullOrEmpty(e.Nota.ToString()) || e.Nota == 0)
                        .OrderByDescending(e => e.FechaEvaluacion)
                        .ToList();

                    evaluacionesRevisadas = todasLasEvaluaciones
                        .Where(e => e.Nota.HasValue && e.Nota > 0)
                        .OrderByDescending(e => e.FechaEvaluacion)
                        .ToList();
                }
            }
            else
            {
                mensajeError = "Error al cargar las evaluaciones";
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error: {ex.Message}";
            Console.WriteLine($"Error: {ex}");
        }
        finally
        {
            cargando = false;
        }
    }

    private void IrACalificar(int idEvaluacion)
    {
        NavigationManager.NavigateTo($"/admin/evaluaciones-teoricas?id={idEvaluacion}");
    }

    private void GenerarReporte(int idEvaluacion)
    {
        // Redirigir a página de reporte
        NavigationManager.NavigateTo($"/reporte/{idEvaluacion}");
    }

    public class EvaluacionDto
    {
        public int IdEvaluacion { get; set; }
        public int IdEvaluado { get; set; }
        public string? NombreEvaluado { get; set; }
        public DateOnly? FechaEvaluacion { get; set; }
        public decimal? Nota { get; set; }
        public string? EstadoEvaluacion { get; set; }
        public bool? TipoEvaluacion { get; set; }
        public int CantidadPreguntas { get; set; }
        public bool TieneRespuestas { get; set; }
    }
}
