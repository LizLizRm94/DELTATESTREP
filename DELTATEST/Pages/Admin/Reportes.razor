@page "/reportes"
@using DELTATEST.Services
@using System.Text.Json
@inject HttpClient Http
@inject NavigationManager NavigationManager
@layout ReportesLayout

<div class="reportes-container">
    <div class="reportes-header">
        <h1 class="titulo-reportes">MÓDULO DE REPORTES</h1>
        <p class="subtitulo-reportes">Sistema de Evaluación - DELTATEST</p>
    </div>

    @if (cargando)
    {
        <div class="loading-container">
            <div class="spinner"></div>
            <p>Cargando evaluaciones...</p>
        </div>
    }
    else
    {
        <div class="reportes-content">
            <!-- SECCIÓN 1: EVALUACIONES PENDIENTES -->
            <div class="seccion-reportes">
                <div class="seccion-header">
                    <h2 class="seccion-titulo">?? Evaluaciones Pendientes</h2>
                    <span class="badge-contador">@(evaluacionesPendientes?.Count ?? 0)</span>
                </div>

                @if (evaluacionesPendientes == null || evaluacionesPendientes.Count == 0)
                {
                    <div class="alerta alerta-info">
                        <p>No hay evaluaciones pendientes de calificación.</p>
                    </div>
                }
                else
                {
                    <div class="tabla-evaluaciones">
                        <table class="tabla">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Evaluado</th>
                                    <th>Fecha</th>
                                    <th>Tipo</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var eval in evaluacionesPendientes)
                                {
                                    <tr class="fila-evaluacion">
                                        <td><strong>@eval.IdEvaluacion</strong></td>
                                        <td>@eval.NombreEvaluado</td>
                                        <td>@eval.FechaEvaluacion?.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            @if (eval.TipoEvaluacion == true)
                                            {
                                                <span class="badge badge-teorica">Teórica</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-practica">Práctica</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="estado-pendiente">@eval.EstadoEvaluacion</span>
                                        </td>
                                        <td>
                                            <button class="btn-accion btn-calificar" 
                                                    @onclick="() => IrACalificar(eval.IdEvaluacion)"
                                                    title="Calificar esta evaluación">
                                                ? Calificar
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>

            <hr class="divisor-secciones" />

            <!-- SECCIÓN 2: EVALUACIONES REVISADAS/COMPLETADAS -->
            <div class="seccion-reportes">
                <div class="seccion-header">
                    <h2 class="seccion-titulo">? Evaluaciones Revisadas/Completadas</h2>
                    <span class="badge-contador">@(evaluacionesRevisadas?.Count ?? 0)</span>
                </div>

                @if (evaluacionesRevisadas == null || evaluacionesRevisadas.Count == 0)
                {
                    <div class="alerta alerta-info">
                        <p>No hay evaluaciones revisadas o completadas.</p>
                    </div>
                }
                else
                {
                    <div class="tabla-evaluaciones">
                        <table class="tabla">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Evaluado</th>
                                    <th>Fecha</th>
                                    <th>Tipo</th>
                                    <th>Calificación</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var eval in evaluacionesRevisadas)
                                {
                                    var claseNota = eval.Nota >= 80 ? "nota-aprobado" : eval.Nota >= 51 ? "nota-regular" : "nota-reprobado";
                                    <tr class="fila-evaluacion">
                                        <td><strong>@eval.IdEvaluacion</strong></td>
                                        <td>@eval.NombreEvaluado</td>
                                        <td>@eval.FechaEvaluacion?.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            @if (eval.TipoEvaluacion == true)
                                            {
                                                <span class="badge badge-teorica">Teórica</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-practica">Práctica</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="@claseNota">@eval.Nota?.ToString("F2") ?? "N/A")/100</span>
                                        </td>
                                        <td>
                                            <span class="@(eval.Nota >= 80 ? "estado-aprobado" : "estado-desaprobado")">
                                                @(eval.Nota >= 80 ? "Aprobado" : "Desaprobado")
                                            </span>
                                        </td>
                                        <td>
                                            <button class="btn-accion btn-reporte" 
                                                    @onclick="() => GenerarReporte(eval.IdEvaluacion)"
                                                    title="Generar reporte de esta evaluación">
                                                ?? Reporte
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(mensajeError))
    {
        <div class="alerta alerta-error">
            <span>@mensajeError</span>
        </div>
    }
</div>

