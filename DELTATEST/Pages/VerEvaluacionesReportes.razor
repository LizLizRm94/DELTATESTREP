@page "/verEvaluacionesReportes"
@using DELTATEST.Services
@inject HttpClient Http
@inject NavigationManager Nav
@layout MainSinLayout

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-warning">
            <i class="bi bi-file-earmark-text"></i> Evaluaciones y Reportes
        </h3>
        <button class="btn btn-secondary" @onclick="IrAtras">
            <i class="bi bi-arrow-left"></i> Volver
        </button>
    </div>

    <div class="search-container mb-4">
        <input type="text" 
               class="form-control" 
               placeholder="?? Buscar por nombre del evaluado o evaluador" 
               @bind="searchTerm"
               @oninput="OnSearch" />
    </div>

    @if (isLoading)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-warning" role="status"></div>
            <p class="mt-3">Cargando evaluaciones...</p>
        </div>
    }
    else if (evaluacionesFiltradas == null || evaluacionesFiltradas.Count == 0)
    {
        <div class="alert alert-info text-center">
            <p>@(evaluaciones?.Count == 0 ? "No hay evaluaciones registradas." : "No se encontraron evaluaciones con ese criterio.")</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered table-sm">
                <thead class="table-warning text-dark">
                    <tr>
                        <th style="width: 8%">ID Eval.</th>
                        <th style="width: 18%">Evaluado</th>
                        <th style="width: 12%">Fecha</th>
                        <th style="width: 12%">Tipo</th>
                        <th style="width: 10%">Nota</th>
                        <th style="width: 15%">Evaluador</th>
                        <th style="width: 25%">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var eval in evaluacionesFiltradas)
                    {
                        <tr>
                            <td class="fw-bold text-warning">#@eval.IdEvaluacion</td>
                            <td>@eval.NombreEvaluado</td>
                            <td>@(eval.FechaEvaluacion?.ToString("dd/MM/yyyy") ?? "-")</td>
                            <td>
                                <span class="badge @(eval.TipoEvaluacion == "Teórica" ? "bg-info" : "bg-secondary")">
                                    @eval.TipoEvaluacion
                                </span>
                            </td>
                            <td class="text-center">
                                @if (eval.Nota.HasValue)
                                {
                                    <span class="badge @(eval.Nota >= 80 ? "bg-success" : "bg-danger") p-2">
                                        @eval.Nota.Value.ToString("F0")/100
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@(eval.NombreAdministrador ?? "-")</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-warning" 
                                        @onclick="() => VerReporte(eval.IdEvaluacion)"
                                        title="Ver reporte de evaluación con espacios para firmas">
                                    <i class="bi bi-file-pdf"></i> Generar Reporte
                                </button>
                                <button class="btn btn-sm btn-outline-info" 
                                        @onclick="() => ImprimirReporte(eval.IdEvaluacion)"
                                        title="Imprimir directamente">
                                    <i class="bi bi-printer"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    .search-container {
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
    }

    .table-hover tbody tr:hover {
        background-color: #fff9e6;
    }

    .badge {
        font-size: 12px;
        padding: 4px 8px;
    }

    .btn-sm {
        padding: 0.4rem 0.6rem;
        font-size: 0.85rem;
    }
</style>

@code {
    private List<EvaluacionListDto> evaluaciones = new();
    private List<EvaluacionListDto> evaluacionesFiltradas = new();
    private string searchTerm = "";
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            evaluaciones = await Http.GetFromJsonAsync<List<EvaluacionListDto>>(
                "https://localhost:7287/api/evaluaciones"
            ) ?? new();

            evaluacionesFiltradas = evaluaciones;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void OnSearch()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            evaluacionesFiltradas = evaluaciones;
        }
        else
        {
            var termoBusqueda = searchTerm.ToLower();
            evaluacionesFiltradas = evaluaciones
                .Where(e => 
                    (e.NombreEvaluado?.ToLower().Contains(termoBusqueda) ?? false) ||
                    (e.NombreAdministrador?.ToLower().Contains(termoBusqueda) ?? false))
                .ToList();
        }
    }

    private void VerReporte(int idEvaluacion)
    {
        Nav.NavigateTo($"/reporte-evaluacion/{idEvaluacion}");
    }

    private void ImprimirReporte(int idEvaluacion)
    {
        Nav.NavigateTo($"/reporte-evaluacion/{idEvaluacion}");
    }

    private void IrAtras()
    {
        Nav.NavigateTo("/panelControlAdmin");
    }

    public class EvaluacionListDto
    {
        public int IdEvaluacion { get; set; }
        public string? NombreEvaluado { get; set; }
        public DateOnly? FechaEvaluacion { get; set; }
        public decimal? Nota { get; set; }
        public string? EstadoEvaluacion { get; set; }
        public string? TipoEvaluacion { get; set; }
        public string? NombreAdministrador { get; set; }
    }
}
