        display: grid;
     grid-template-columns: 180px 1fr;
    gap: 16px;
   align-items: center;
     margin-bottom: 14px;
    }

    .label-pregunta {
        font-weight: 500;
   color: #374151;
    }

    .input-respuesta {
        width: 100%;
      padding: 10px 12px;
        border: 1px solid #d1d5db;
        border-radius: 8px;
        font-size: 14px;
  }

    .input-respuesta:focus {
     outline: none;
      border-color: #f58220;
        box-shadow: 0 0 0 3px rgba(245, 130, 32, 0.1);
    }

    .acciones {
        display: flex;
    gap: 16px;
        justify-content: flex-end;
        margin-top: 22px;
  padding-top: 24px;
        border-top: 1px solid #e5e7eb;
    }

    .btn {
        padding: 12px 32px;
        border: none;
 border-radius: 24px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        min-width: 140px;
    }

