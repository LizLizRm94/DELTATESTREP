        background: #f8d7da;
        border: 1px solid #f5c6cb;
        color: #721c24;
    }

    .btn-cerrar {
        background: none;
        border: none;
   font-size: 24px;
        cursor: pointer;
        color: inherit;
        padding: 0;
   margin-left: 20px;
    }

  .btn-cerrar:hover {
      opacity: 0.7;
    }

    @@keyframes slideIn {
   from {
        opacity: 0;
       transform: translateY(-10px);
        }
        to {
    opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 640px) {
        .fila-pregunta {
          grid-template-columns: 1fr;
        }

    .label-pregunta {
      margin-bottom: 6px;
        }

        .alerta {
            flex-direction: column;
            align-items: flex-start;
        }

   .btn-cerrar {
            align-self: flex-end;
            margin-left: 0;
   margin-top: 10px;
        }

        .acciones {
      flex-direction: column;
     gap: 12px;
        }

        .btn {
        width: 100%;
        min-width: auto;
        }
    }
</style>
