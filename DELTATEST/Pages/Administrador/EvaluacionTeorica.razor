@page "/EvaluacionTeorica"
@using DELTATEST.Models
@using System.Text.Json
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager NavigationManager
@layout MainSinLayout

<h3 class="titulo-form">EVALUACION TEORICA</h3>

@if (mostrarMensaje)
{
    <div class="alerta @(esError ? "alerta-error" : "alerta-exito")">
        <span>@mensajeRespuesta</span>
        <button type="button" class="btn-cerrar" @onclick="CerrarMensaje">&times;</button>
    </div>
}

<form @onsubmit="OnSubmit">
    <div class="form-evaluacion">
        <!-- Selector de usuario -->
        <div class="fila-pregunta">
            <label class="label-pregunta">Seleccionar Usuario</label>
            <select class="input-respuesta" @bind="idUsuarioSeleccionado" disabled="@cargando">
      <option value="0">-- Seleccione un usuario --</option>
         @if (usuarios != null)
     {
             @foreach (var usuario in usuarios)
            {
       <option value="@usuario.IdUsuario">@usuario.NombreCompleto</option>
              }
          }
  </select>
        </div>

    <!-- SECCIÓN 1: Preguntas Abiertas -->
   @if (modelo?.PreguntasAbiertas != null && modelo.PreguntasAbiertas.Count > 0)
        {
        <div class="seccion-preguntas">
                <h4 class="titulo-seccion">Preguntas Abiertas (5)</h4>
     @foreach (var pregunta in modelo.PreguntasAbiertas)
       {
       <div class="fila-pregunta">
  <label class="label-pregunta">Pregunta @(modelo.PreguntasAbiertas.IndexOf(pregunta) + 1)</label>
   <input type="text" class="input-respuesta" @bind="pregunta.Texto" @bind:event="oninput" placeholder="Ingrese la pregunta abierta" />
    </div>
       <div class="fila-pregunta">
          <label class="label-pregunta">Puntos</label>
   <input type="number" class="input-respuesta" @bind="pregunta.Puntos" min="0" placeholder="0" />
    </div>
}
            </div>
        }

        <!-- SECCIÓN 2: Preguntas Opción Múltiple -->
        @if (modelo?.PreguntasMultiples != null && modelo.PreguntasMultiples.Count > 0)
   {
         <div class="seccion-preguntas">
      <h4 class="titulo-seccion">Preguntas de Opción Múltiple (5)</h4>
      @foreach (var pregunta in modelo.PreguntasMultiples)
     {
 var indexPregunta = modelo.PreguntasMultiples.IndexOf(pregunta);
   <div class="pregunta-multiple">
         <div class="pregunta-multiple-header">
  <label class="label-pregunta">Pregunta @(indexPregunta + 1)</label>
         <input type="text" class="input-respuesta input-pregunta" @bind="pregunta.Texto" @bind:event="oninput" placeholder="Ingrese la pregunta" />
  </div>

   <div class="puntos-row">
    <label class="label-pregunta">Puntos</label>
    <input type="number" class="input-respuesta input-puntos" @bind="pregunta.Puntos" min="0" placeholder="0" />
 </div>

   <div class="opciones-container">
       @if (pregunta.OpcionesLista != null && pregunta.OpcionesLista.Count > 0)
       {
    @foreach (var opcion in pregunta.OpcionesLista)
    {
  var indexOpcion = pregunta.OpcionesLista.IndexOf(opcion);
   <div class="opcion-item">
       <div class="opcion-header">
     <label class="label-opcion">Opción @((char)('A' + indexOpcion))</label>
      <input type="checkbox" class="checkbox-correcta" 
 @onchange="@((ChangeEventArgs e) => MarcarOpcionCorrecta(pregunta, indexOpcion, (bool)e.Value!))" 
   checked="@opcion.EsCorrecta" 
  title="Marcar como respuesta correcta" />
      <span class="label-checkbox">Correcta</span>
    @if (pregunta.OpcionesLista.Count > 2)
   {
      <button type="button" class="btn-eliminar-opcion" @onclick="@(() => EliminarOpcion(pregunta, indexOpcion))" title="Eliminar esta opción">
   -
          </button>
      }
      </div>
   <input type="text" class="input-respuesta" @bind="opcion.Texto" @bind:event="oninput" placeholder="Ingrese la opción" />
     </div>
      }
 }
     </div>

     <!-- Botón para agregar opción -->
       <button type="button" class="btn-agregar-opcion" @onclick="@(() => AgregarOpcion(pregunta))">
 + Agregar Opción
    </button>
             </div>
     }
        </div>
     }

   <div class="acciones">
   <button type="submit" class="btn btn-primario" disabled="@(cargando || idUsuarioSeleccionado == 0)">
       @if (cargando)
        {
        <span>Guardando...</span>
      }
      else
          {
        <span>Subir</span>
       }
       </button>

            <button type="button" class="btn btn-secundario" @onclick="OnCancel" disabled="@cargando">Cancelar</button>
        </div>
    </div>
</form>

@code {
    private EvaluacionTeoricaModelo modelo = new();
    private List<UserViewModel>? usuarios;
    private int idUsuarioSeleccionado = 0;
    private bool cargando = false;
    private bool mostrarMensaje = false;
    private string mensajeRespuesta = string.Empty;
    private bool esError = false;

    protected override async Task OnInitializedAsync()
    {
 await CargarUsuarios();
        InicializarPreguntas();
    }

  private async Task CargarUsuarios()
    {
        try
        {
         usuarios = await Http.GetFromJsonAsync<List<UserViewModel>>("api/usuarios");
   }
        catch (Exception ex)
        {
       Console.WriteLine($"Error cargando usuarios: {ex.Message}");
   usuarios = new List<UserViewModel>();
   mostrarMensaje = true;
       esError = true;
    mensajeRespuesta = $"Error al cargar usuarios: {ex.Message}";
     }
    }

    private void InicializarPreguntas()
  {
        try
        {
            // Inicializar 5 preguntas abiertas
    modelo.PreguntasAbiertas = Enumerable.Range(1, 5)
        .Select(i => new Pregunta { Texto = string.Empty, TipoEvaluacion = true })
     .ToList();

       // Inicializar 5 preguntas de opción múltiple con 2 opciones iniciales
modelo.PreguntasMultiples = Enumerable.Range(1, 5)
              .Select(i => new Pregunta
          {
            Texto = string.Empty,
           TipoEvaluacion = false,
       OpcionesLista = Enumerable.Range(1, 2)
     .Select(j => new Opcion { Texto = string.Empty, EsCorrecta = false })
        .ToList()
                })
         .ToList();
        }
        catch (Exception ex)
 {
          Console.WriteLine($"Error en InicializarPreguntas: {ex.Message}");
   }
    }

    private void AgregarOpcion(Pregunta pregunta)
    {
      if (pregunta.OpcionesLista == null)
      pregunta.OpcionesLista = new List<Opcion>();

        pregunta.OpcionesLista.Add(new Opcion { Texto = string.Empty, EsCorrecta = false });
    }

    private void EliminarOpcion(Pregunta pregunta, int indexOpcion)
    {
        if (pregunta.OpcionesLista == null || indexOpcion < 0 || indexOpcion >= pregunta.OpcionesLista.Count)
 return;

 pregunta.OpcionesLista.RemoveAt(indexOpcion);
    }

    private void MarcarOpcionCorrecta(Pregunta pregunta, int indexOpcion, bool esCorrecta)
{
        if (pregunta.OpcionesLista == null) return;

      // Desmarcar todas las opciones
      foreach (var opcion in pregunta.OpcionesLista)
   {
      opcion.EsCorrecta = false;
        }

        // Marcar solo la seleccionada
     if (esCorrecta && indexOpcion < pregunta.OpcionesLista.Count)
   {
            pregunta.OpcionesLista[indexOpcion].EsCorrecta = true;
    }
  }

  private async Task OnSubmit()
    {
      if (idUsuarioSeleccionado == 0)
        {
   mostrarMensaje = true;
    esError = true;
  mensajeRespuesta = "Debe seleccionar un usuario";
       return;
      }

   cargando = true;
        try
     {
    // Validar preguntas abiertas
      var preguntasAbiertasValidas = modelo.PreguntasAbiertas
 .Where(p => !string.IsNullOrWhiteSpace(p.Texto))
    .ToList();

    // Validar preguntas múltiples
      var preguntasMultiplesValidas = modelo.PreguntasMultiples
    .Where(p => !string.IsNullOrWhiteSpace(p.Texto) && 
p.OpcionesLista.Count >= 2 && 
 p.OpcionesLista.All(o => !string.IsNullOrWhiteSpace(o.Texto)) &&
           p.OpcionesLista.Any(o => o.EsCorrecta))
   .ToList();

      if (preguntasAbiertasValidas.Count == 0 && preguntasMultiplesValidas.Count == 0)
   {
        mostrarMensaje = true;
         esError = true;
     mensajeRespuesta = "Debe ingresar al menos una pregunta completa. Las preguntas múltiples deben tener mínimo 2 opciones y una marcada como correcta.";
     cargando = false;
    return;
  }

     // Preparar preguntas abiertas
       var preguntasAbiertas = preguntasAbiertasValidas.Take(5).Select(p => new
    {
   texto = p.Texto,
        tipoEvaluacion = true,
     opciones = (string?)null,
        puntos = p.Puntos,
    opcionesConCorrecta = new List<object>()
}).ToList();

     // Preparar preguntas múltiples con opciones serializadas
  var preguntasMultiples = preguntasMultiplesValidas.Take(5).Select(p => new
  {
 texto = p.Texto,
     tipoEvaluacion = false,
       opciones = JsonSerializer.Serialize(p.OpcionesLista.Select(o => new { texto = o.Texto, esCorrecta = o.EsCorrecta }).ToList()),
        puntos = p.Puntos,
  opcionesConCorrecta = p.OpcionesLista.Select(o => new { texto = o.Texto, esCorrecta = o.EsCorrecta }).ToList()
   }).ToList();

      // Combinar todas las preguntas
  var todasLasPreguntas = new List<dynamic>();
     todasLasPreguntas.AddRange(preguntasAbiertas);
         todasLasPreguntas.AddRange(preguntasMultiples);

  var requestEvaluacion = new
       {
    idUsuario = idUsuarioSeleccionado,
    preguntas = todasLasPreguntas.Cast<object>().ToList()
 };

   var responseEvaluacion = await Http.PostAsJsonAsync("api/evaluaciones/crear-evaluacion-teorica", requestEvaluacion);

        if (responseEvaluacion.IsSuccessStatusCode)
   {
  mostrarMensaje = true;
        esError = false;
        mensajeRespuesta = "¡Evaluación teórica creada exitosamente!";
      await Task.Delay(2000);
      OnCancel();
   }
     else
{
     var contenidoError = await responseEvaluacion.Content.ReadAsStringAsync();
   mostrarMensaje = true;
     esError = true;
   mensajeRespuesta = $"Error al crear evaluación: {responseEvaluacion.StatusCode} - {contenidoError}";
    }
        }
catch (Exception ex)
        {
   mostrarMensaje = true;
        esError = true;
        mensajeRespuesta = $"Error: {ex.Message}";
}
     finally
     {
       cargando = false;
        }
    }

    private void OnCancel()
    {
        NavigationManager.NavigateTo("/panelControlAdmin");
    }

    private void CerrarMensaje()
    {
  mostrarMensaje = false;
    }
}

