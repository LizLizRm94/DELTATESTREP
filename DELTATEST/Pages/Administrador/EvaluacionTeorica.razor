        box-shadow: 0 4px 12px rgba(245, 130, 32, 0.3);
    }

    .btn-secundario {
        background: white;
        color: #f58220;
        border: 2px solid #f58220;
    }

    .btn-secundario:hover:not(:disabled) {
  background: #f58220;
     color: white;
        transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(245, 130, 32, 0.3);
    }

    .alerta {
        max-width: 700px;
  margin: 0 auto 20px;
        padding: 16px 20px;
 border-radius: 8px;
        display: flex;
     justify-content: space-between;
   align-items: center;
        animation: slideIn 0.3s ease-in-out;
    }

    .alerta-exito {
        background: #d1f4d1;
        border: 1px solid #6ee76e;
        color: #155724;
    }

